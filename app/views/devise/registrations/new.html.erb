<div class="contents row">
  <div class="container">
    <h2>サインアップ</h2>
    <%= form_with model: resource, url: registration_path(resource_name), class: 'signup-form', local: true do |f| %>
      <%= render "devise/shared/error_messages", model: resource %>

      <div class="form-group">
        <%= f.label :nickname, "ニックネーム" %><br />
        <%= f.text_field :nickname, autofocus: true, class: "form-control", placeholder: "例) 節約幸子", maxlength: "50" %>
      </div>

      <div class="form-group">
        <%= f.label :email, "メールアドレス" %><br />
        <%= f.email_field :email, class: "form-control", placeholder: "PC・携帯どちらでも可" %>
      </div>

      <div class="form-group">
        <%= f.label :password, "パスワード" %>
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "6文字以上の半角英数字" %>
        <small>※英字と数字の両方を含めて設定してください</small>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, "パスワード（確認）" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "同じパスワードを入力して下さい" %>
      </div>

      <div class="form-group">
        <%= f.label :hourly_rate, "時給" %><br />
        <%= f.number_field :hourly_rate, class: "form-control", placeholder: "例) 1000" %>
      </div>

      <div class="form-group">
        <%= f.submit "サインアップ", class: "btn btn-primary btn-block" %>
      </div>
    <% end %>

    <div class="login-link">
      <p>すでにアカウントをお持ちですか？ <%= link_to "ログインはこちら", new_user_session_path %></p>
    </div>
  </div>
</div>
