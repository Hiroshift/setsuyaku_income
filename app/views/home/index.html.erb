<div class="home-container">
  <div class="income-display">
    <div class="income-item">
      <h2>今日の収入</h2>
      <p>¥<%= @today_income %></p>
    </div>
    <div class="income-item">
      <h2>仮想労働時間</h2>
      <p><%= @virtual_work_time %>時間</p>
    </div>
    <div class="income-item">
      <h2>収入の累計</h2>
      <p>¥<%= @total_income %></p>
    </div>
  </div>

  <!-- 新しい節約金額を記録するフォーム -->
  <div class="new-income-form">
    <h2>新しい節約金額を記録</h2>
    <%#= form_with url: new_income_path, method: :post, local: true, class: "income-form" do |f| %>
      <!-- 金額入力フィールド -->
      <div class="form-group">
        <%#= f.label :amount, "節約金額" %><br />
        <%#= f.number_field :amount, placeholder: "例: 500円", class: "form-control", required: true %>
      </div>

      <!-- 記録するボタン -->
      <div class="form-group">
        <%#= f.submit "記録する", class: "btn btn-primary btn-block" %>
      </div>
    <%# end %>
  </div>
</div>
